<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Switches Example</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                text-align: center;
                background-color: #f9f9f9;
                color: #333;
            }
            .container {
                margin: 50px auto;
                padding: 20px;
                border: 2px solid #333;
                width: 300px;
                border-radius: 10px;
                background-color: #fff;
            }
            .switch {
                position: relative;
                display: inline-block;
                width: 60px;
                height: 34px;
                margin: 10px;
            }
            .switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }
            .slider {
                position: absolute;
                cursor: pointer;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: #ccc;
                transition: 0.4s;
                border-radius: 34px;
            }
            .slider:before {
                position: absolute;
                content: "";
                height: 26px;
                width: 26px;
                left: 4px;
                bottom: 4px;
                background-color: white;
                transition: 0.4s;
                border-radius: 50%;
            }
            input:checked + .slider {
                background-color: #007bff;
            }
            input:checked + .slider:before {
                transform: translateX(26px);
            }
            .circles {
                margin-top: 20px;
            }
            .circle {
                display: block;
                width: 20px;
                height: 20px;
                margin: 10px auto;
                border: 2px solid #333;
                border-radius: 50%;
                background-color: transparent;
            }
            .circle.filled {
                background-color: #007bff;
            }
        </style>
    </head>
    <body>
        <h1>Interactive Switches</h1>
        <div class="container">
            <p>Toggle the switches below:</p>
            <label class="switch">
                <input 
                    type="checkbox" id="{{.PumpSwitchID}}"
                    {{if .PumpSwitchChecked}}
                        checked
                    {{end}}
                />
                
                <span class="slider"></span>
            </label>
            <label class="switch">
                <input
                    type="checkbox" id="{{.ValveSwitchID}}"
                    {{if .ValveSwitchChecked}}
                        checked
                    {{end}}
                />
                <span class="slider"></span>
            </label>
            <div class="circles">   
                {{ range .Circles }}
                    {{ if .Filled }}
                        <div class="circle filled"></div>
                    {{ else }}
                        <div class="circle"></div>
                    {{ end }}
                {{ end }}
            </div>
        </div>
        <script>
            {{.PumpSwitchID}}.onchange = (event) => {
                const checked = event.target.checked;
                const url = checked ? "/on" : "/off";
                fetch(url)
                    .then((r) => r.text())
                    .then((text) => {})
                    .catch((e) => {});
            };

            {{.ValveSwitchID}}.onchange = (event) => {
                const checked = event.target.checked;
                const url = checked ? "/on1" : "/off1";
                fetch(url)
                    .then((r) => r.text())
                    .then((text) => {})
                    .catch((e) => {});
            };
            setInterval(() => {
            window.location.reload();
        }, 5000);
        </script>
    </body>
</html>
